---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Dresden Blockchain Community" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-blockchain-light min-h-screen">
    <header class="bg-blockchain-primary text-white">
      <nav class="max-w-4xl mx-auto px-4 py-6">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold hover:text-blockchain-accent transition-colors">
            Dresden Blockchain
          </a>
          <div class="flex gap-6">
            <a href="/blog" class="hover:text-blockchain-accent transition-colors">Blog</a>
            <a href="/about" class="hover:text-blockchain-accent transition-colors">About</a>
          </div>
        </div>
      </nav>
    </header>

    <slot />

    <footer class="bg-blockchain-primary text-white mt-16">
      <div class="max-w-4xl mx-auto px-4 py-8">
        <a
          href="/rss.xml"
          class="inline-flex items-center gap-2 px-4 py-2 bg-blockchain-light text-blockchain-primary rounded-lg hover:bg-blockchain-accent hover:text-white transition-colors"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <path d="M5 3a1 1 0 000 2c5.523 0 10 4.477 10 10a1 1 0 102 0C17 8.373 11.627 3 5 3z"
            ></path>
            <path
              d="M4 9a1 1 0 011-1 7 7 0 017 7 1 1 0 11-2 0 5 5 0 00-5-5 1 1 0 01-1-1zM3 15a2 2 0 114 0 2 2 0 01-4 0z"
            ></path>
          </svg>
          RSS Feed abonnieren
        </a>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>

